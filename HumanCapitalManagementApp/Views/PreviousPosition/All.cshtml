@model DetailsPreviousPositionsViewModel
@{
    ViewData["Title"] = "Previous Positions";
}
<h2 id="title" class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="card-body text-center">
    <p>Add new record for your leave request</p>
    <a asp-area="" asp-controller="PreviousPosition" asp-action="Add" asp-route-id="@Model.EmployeeId"
       class="btn btn-secondary">Add</a>
</div>

@if (!Model.PreviousPositions.Any())
{
    <div class="text-center">
        <h3> No entries added.</h3>
    </div>
}
@foreach (var position in Model.PreviousPositions)
{
    <div class="card mb-3">
        <div class="card-body">
            <p class="h5">Id: <b>@position.Id</b></p>
            <div class="col-xs-6">
                <p class="h5">Department: <b>@position.Department</b></p>
                <p></p>
                <p></p>
                <p class="h5">Position: <b>@position.Position</b></p>
                <p></p>
                <p></p>
                <p class="h5">From: <b>@position.From.ToShortDateString()</b></p>
                <p></p>
                <p></p>
                <p class="h5">To: <b>@position.To.ToShortDateString()</b></p>
                <p></p>
                <p></p>
                <p class="h5">Salary: <b>@position.Salary</b></p>
                <p></p>
                <div>
                    <a asp-area="" asp-controller="PreviousPosition" asp-action="Delete" asp-route-id="@position.Id"
                       class="btn btn-secondary">Delete</a>
                </div>
            </div>
        </div>
    </div>
}