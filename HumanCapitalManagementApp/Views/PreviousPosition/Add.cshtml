@model AddPreviousPositionsFormModel
@{
    ViewData["Title"] = "Add Previous Position";
}
<h2 id="title" class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-5 text-center">
        <form id="addForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.From" class="form-control" autocomplete="from" aria-required="true" />
                <label asp-for="@Model.From"></label>
                <span asp-validation-for="@Model.From" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.To" class="form-control" autocomplete="to" aria-required="true" />
                <label asp-for="@Model.To"></label>
                <span asp-validation-for="@Model.To" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Salary" class="form-control" autocomplete="salary" aria-required="true" />
                <label asp-for="@Model.Salary"></label>
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label id="title" asp-for="PositionId" class="form-label">Position</label>
                <select asp-for="PositionId" class="form-control">
                    @foreach (var position in Model.Positions)
                    {
                        <option value="@position.Id">@position.Name</option>
                    }
                </select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label id="title" asp-for="DepartmentId" class="form-label">Department</label>
                <select asp-for="DepartmentId" class="form-control">
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <button id="AddSubmit" type="submit" class="w-100 btn btn-lg btn-secondary">Add</button>
        </form>
    </div>
</div>