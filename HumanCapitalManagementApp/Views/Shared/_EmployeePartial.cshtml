@model AllEmployeesViewModel

<tr>
    <td><p>@Model.Id</p></td>
    <td><p>@Model.FirstName @Model.LastName</p></td>
    <td><p>@Model.HireDate.ToShortDateString()</p></td>
    <td><p>@Model.Position</p></td>
    <td><p>@Model.Department</p></td>
    <td>
        @if (Model.IsHired)
        {
            <label>✔</label>
            <a asp-controller="Employee" asp-action="Hire" asp-route-id="@Model.Id" method="post" class="btn btn-secondary">Fired</a>
        }
        else
        {
            <label class="text-center">❌</label>
            <a asp-controller="Employee" asp-action="Hire" asp-route-id="@Model.Id" method="post" class="btn btn-secondary">Hired</a>
        }
    </td>
    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a></td>
    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a></td>
</tr>