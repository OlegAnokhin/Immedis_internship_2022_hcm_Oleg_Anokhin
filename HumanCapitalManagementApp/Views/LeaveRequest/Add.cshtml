@model LeaveRequestViewModel
@{
    ViewData["Title"] = "Add leave request";
}
<h2 id="title" class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-5 text-center">
        <form id="addForm" method="post">
            <h2>Create a new leave order.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.From" class="form-control" aria-required="true" />
                <label asp-for="@Model.From"></label>
                <span asp-validation-for="@Model.From" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.To" class="form-control" aria-required="true" />
                <label asp-for="@Model.To"></label>
                <span asp-validation-for="@Model.To" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.VacationOrSickLeave" class="form-control" autocomplete="VacationOrSickLeave" aria-required="true" />
                <label asp-for="@Model.VacationOrSickLeave"></label>
                <span asp-validation-for="@Model.VacationOrSickLeave" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Description" class="form-control" autocomplete="description" aria-required="true" />
                <label asp-for="@Model.Description"></label>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <p></p>
            <button type="submit" class="w-100 btn btn-lg btn-secondary">Add leave request</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}